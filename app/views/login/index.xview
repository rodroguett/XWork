                    <!-- MAIN APP JS FILE -->
                    <script src="[:__TPL_JS:]app.js"></script>

                    <script type="text/javascript">
                              runAllForms();

                              $(function() {
                                        $("#login-form").validate({
                                                  rules: {
                                                            email: {
                                                                      required: true,
                                                                      email: true
                                                            },
                                                            password: {
                                                                      required: true,
                                                                      minlength: 3,
                                                                      maxlength: 20
                                                            }
                                                  },
                                                  messages: {
                                                            email: {
                                                                      required: 'Porfavor ingrese su correo',
                                                                      email: 'Porfavor ingrese un mail válido'
                                                            },
                                                            password: {
                                                                      required: 'Porfavor ingrese su contraseña'
                                                            }
                                                  },
                                                  errorPlacement: function(error, element) {
                                                            error.insertAfter(element.parent());
                                                  },
                                                  submitHandler: function(form) {
                                                            var dataForm = $(form).serialize();
                                                            $.blackout.show("Guardando...");
                                                            $.ajax({
                                                                      type: "POST",
                                                                      url: "[:__BASE_URL:]login/login",
                                                                      data: dataForm
                                                            }).done(function(msg) {                                                                      
                                                                      if (msg == 1) {
                                                                                $('body').fadeOut(1000, newpage);
                                                                      } else {
                                                                                $(".control-label[for=signin]").html('<center>'+msg+'</center>')
                                                                      }
                                                            });
                                                  }
                                        });
                              });
                              
                              
                              function newpage() {
                                        window.location = '[:__BASE_URL:]#dashboard';
                              }
                    </script>

